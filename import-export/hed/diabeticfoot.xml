	<externalData>
		<def name="Patient">
			<expression xsi:type="ClinicalRequest" cardinality="Single"
				dataType="vmr:EvaluatedPerson" isInitial="true">
				<description>Patient who has been evaluated.</description>
			</expression>
		</def>
		<def name="DiabetesExamSNOMED">
			<expression xsi:type="ClinicalRequest" cardinality="Multiple"
				dataType="vmr:ProcedureOrder" dateProperty="ProcedureTime.end" codeProperty="ProcedureCode">
				<description>Diabetes diagnosis code entered during this or any prior encounter. </description>
					<element xsi:type="CodeLiteral" code="69878008"
						codeSystem="2.16.840.1.113883.6.96" codeSystemName="SNOMED-CT"
						displayName="Polycystic ovaries (disorder)." />
			</expression>
		</def>
		<def name="DiabetesExamSNOMEDPastYear">
			<expression xsi:type="ClinicalRequest" cardinality="Multiple"
				dataType="vmr:ProcedureOrder" dateProperty="ProcedureTime.end" codeProperty="ProcedureCode">
				<description>Diabetes feet exams over the past year.</description>
				<codes xsi:type="List">
				<element xsi:type="CodeLiteral" code="394683006"
					codeSystem="2.16.840.1.113883.6.96" codeSystemName="SNOMED-CT"
					displayName="Diabetic foot risk assessment (procedure)." />				</codes>
				<dateRange xsi:type="Interval">
					<begin xsi:type="DateAdd">
						<date xsi:type="Today" />
						<granularity xsi:type="Literal" valueType="DateGranularity"
							value="Month" />
						<numberOfPeriods xsi:type="IntegerLiteral" value="-12" />
					</begin>
					<end xsi:type="Today" />
				</dateRange>
			</expression>
		</def>
		<def name="PolycysticOvariesSNOMED">
			<expression xsi:type="ClinicalRequest" cardinality="Multiple"
				dataType="vmr:Problem" codeProperty="conditionCode" dateProperty="diagnosticEventTime.low">
				<description>Patient has diagnosis code for polycystic ovaries.
				</description>
				<codes xsi:type="List">
					<element xsi:type="CodeLiteral" code="69878008"
						codeSystem="2.16.840.1.113883.6.96" codeSystemName="SNOMED-CT"
						displayName="Polycystic ovaries (disorder)." />
				</codes>
			</expression>
		</def>
		<def name="GestationalDiabetesSNOMED">
			<expression xsi:type="ClinicalRequest" cardinality="Multiple"
				dataType="vmr:Problem" codeProperty="conditionCode" 
				dateProperty="diagnosticEventTime.low" useValueSets="true">
				<description>Patient has diagnosis code for gestational diabetes.</description>
				<codes xsi:type="ValueSet" id="1.3.6.1.4.1.19376.1.7.3.1.1.13.8.137" authority="NCHS"
						version="1.0" />
			</expression>
		</def>
		<def name="SteroidInducedDiabetesSNOMED">
			<expression xsi:type="ClinicalRequest" cardinality="Multiple"
				dataType="vmr:Problem" codeProperty="conditionCode" dateProperty="diagnosticEventTime.low">
				<description> Patient has diagnosis code for steroid induced diabetes. 
				</description>
				<codes xsi:type="List">
					<element xsi:type="CodeLiteral" code="190447002"
						codeSystem="2.16.840.1.113883.6.96" codeSystemName="SNOMED-CT"
						displayName="Steroid-induced diabetes (disorder)." />
					<element xsi:type="CodeLiteral" code="190416008"
						codeSystem="2.16.840.1.113883.6.96" codeSystemName="SNOMED-CT"
						displayName="Steroid-induced diabetes mellitus without complication (disorder)." />
				</codes>
			</expression>
		</def>
	</externalData>
	<conditions>
		<condition>
			<logic xsi:type="And">
				<description> Patient has a diagnosis of diabetes either during this encounter or a prior encounter, and more than 12 months have passed since the date of previous exam.
				</description>
				<operand xsi:type="IsNotEmpty">
					<description>Diabetes Foot Exam during this or any prior encounter</description>
					<operand xsi:type="ExpressionRef" name="DiabetesExamSNOMED" />
				</operand>
				<operand xsi:type="IsEmpty">
					<description>Diabetes Foot Exam did not take place in  last 12 months</description>
					<operand xsi:type="ExpressionRef" name="DiabetesExamSNOMEDPastYear" />
				</operand>
				<operand xsi:type="IsEmpty">
					<description>Exclusion - Patient has polycystic ovaries</description>
					<operand xsi:type="ExpressionRef" name="PolycysticOvariesSNOMED" />
				</operand>
				<operand xsi:type="IsEmpty">
					<description>Exclusion - Patient has gestational diabetes</description>
					<operand xsi:type="ExpressionRef" name="GestationalDiabetesSNOMED" />
				</operand>
				<operand xsi:type="IsEmpty">
					<description>Exclusion - Patient has steroid induced diabetes</description>
					<operand xsi:type="ExpressionRef" name="SteroidInducedDiabetesSNOMED" />
				</operand>	
			</logic>
			<conditionRole value="ApplicableScenario" />
		</condition>
	</conditions>
	<actionGroup>
		<behaviors>
			<behavior xsi:type="RequiredBehavior" value="Must"/>
		</behaviors>
		<title value="Notify the physician" />
		<description	value="Contact the physician to inform them the patient is overdue for a diabetic foot exam." />
		<subElements>
			<simpleAction xsi:type="CreateAction">
				<actionSentence xsi:type="ObjectExpression"
					objectType="vmr:CommunicationProposal">
					<property name="message">
						<value xsi:type="ComplexLiteral">
							<value xsi:type="dt:ED"
								value="Patient has been diagnosed with Diabetes during or prior to this encounter, and has not been in for a visit in the past year. They are overdue for a diabetic foot exam." />
						</value>
					</property>
				</actionSentence>
			</simpleAction>
		</subElements>
	</actionGroup>
