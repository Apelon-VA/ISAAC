	<externalData>
		<def name="Patient">
			<expression xsi:type="ClinicalRequest" cardinality="Single"
				dataType="vmr:EvaluatedPerson" isInitial="true">
				<description>Patient who has been evaluated.</description>
			</expression>
		</def>
		<def name="HypertensionDiagnosisSNOMED">
			<expression xsi:type="ClinicalRequest" cardinality="Multiple"
				dataType="vmr:Problem" codeProperty="conditionCode" dateProperty="diagnosticEventTime.low">
				<description>Hypertension diagnosis code entered during this or any prior encounter. </description>
				<codes xsi:type="ValueSet" id="2.16.840.1.113883.3.464.1003.104.12.1011" authority="NIH VSAC"
						version="1.0" />
				<!-- Note that for this rule, date range is not relevant -->
			</expression>
		</def>
		<def name="AntiHypertensiveMedicationPreviouslyPrescribed">
			<expression xsi:type="ClinicalRequest" cardinality="Multiple" isInitial="false"
				dataType="vmr:SubstanceAdministrationEvent" codeProperty="substanceAdministrationGeneralPurpose"
				dateProperty="administrationTimeInterval.low" useValueSets="true">
				<description>Patient medication list includes anti-hypertensive medication </description>
				<codes xsi:type="ValueSet" id="2.16.840.1.113883.3.600.1476" authority="NIH VSAC"
					version="1.0" />
			</expression>
		</def>
		<def name="NewAntiHypertensiveMedicationPrescribed">
			<expression xsi:type="ClinicalRequest" cardinality="Multiple" isInitial="true"
				dataType="vmr:SubstanceAdministrationEvent" codeProperty="substanceAdministrationGeneralPurpose"
				dateProperty="administrationTimeInterval.low" useValueSets="true">
				<description>Patient just prescribed medication anti-hypertensive medication for first time</description>
				<codes xsi:type="ValueSet" id="2.16.840.1.113883.3.600.1476" authority="NIH VSAC"
					version="1.0" />
			</expression>
		</def>	
	</externalData>
	<expressions>
		<def name="DifferentAntiHypertensiveMedicationClass">
			<expression xsi:type="Difference">
				<description>Two anti-hypertensive medications are different</description>
					<operand xsi:type="ExpressionRef" name="AntiHypertensiveMedicationPreviouslyPrescribed" />
					<operand xsi:type="ExpressionRef" name="NewAntiHypertensiveMedicationPrescribed" />
			</expression>
		</def>	
	</expressions>
	<conditions>
		<condition>
			<logic xsi:type="And">
				<description> Patient has a diagnosis of hypertension either during this encounter or a prior encounter. A new order for an 
				anti-hypertensive medication has been ordered, and will add an additional medication to the medication list in the same class."
				</description>
				<operand xsi:type="IsNotEmpty">
					<description>Hypertension diagnosis code entered during this or any prior encounter</description>
					<operand xsi:type="ExpressionRef" name="HypertensionDiagnosisSNOMED" />
				</operand>
				<operand xsi:type="IsNotEmpty">
					<description>Newly prescribed anti-hypertensive medication is different class than previously prescribed anti-hypertensive medication</description>
					<operand xsi:type="ExpressionRef" name="DifferentAntiHypertensiveMedicationClass" />
				</operand>
				</logic>	
			<conditionRole value="ApplicableScenario"/>	
		</condition>
	</conditions>
	<actionGroup>
		<behaviors>
			<behavior xsi:type="RequiredBehavior" value="Must"/>
		</behaviors>
		<title value="Alert the physician" />
		<description	value="Alert the physician the new order for anti-hypertensive medication will add an additional medication in the same class." />
		<subElements>
			<simpleAction xsi:type="CreateAction">
				<actionSentence xsi:type="ObjectExpression"
					objectType="vmr:CommunicationProposal">
					<property name="message">
						<value xsi:type="ComplexLiteral">
							<value xsi:type="dt:ED"
								value="Multiple anti-hypertensive medications in the same class have been ordered." />
						</value>
					</property>
				</actionSentence>
			</simpleAction>
		</subElements>
	</actionGroup>
