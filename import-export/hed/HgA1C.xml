	<externalData>
		<def name="Patient">
			<expression xsi:type="ClinicalRequest" cardinality="Single"
				dataType="vmr:EvaluatedPerson" isInitial="true">
				<description>Patient who has been evaluated.</description>
			</expression>
		</def>
		<def name="DiabetesDiagnosisSNOMED">
			<expression xsi:type="ClinicalRequest" cardinality="Multiple"
				dataType="vmr:Problem" codeProperty="conditionCode" dateProperty="diagnosticEventTime.low">
				<description>Diabetes diagnosis code entered during this or any prior encounter. </description>
				<codes xsi:type="ValueSet" id="2.16.840.1.113883.3.464.1003.103.12.1001" authority="NIH VSAC"
						version="1.0" />
				<!-- Note that for this rule, date range is not relevant -->
			</expression>
		</def>
		<def name="PolycysticOvariesSNOMED">
			<expression xsi:type="ClinicalRequest" cardinality="Multiple"
				dataType="vmr:Problem" codeProperty="conditionCode" dateProperty="diagnosticEventTime.low">
				<description>Patient has diagnosis code for polycystic ovaries.
				</description>
				<codes xsi:type="List">
					<element xsi:type="CodeLiteral" code="69878008"
						codeSystem="2.16.840.1.113883.6.96" codeSystemName="SNOMED-CT"
						displayName="Polycystic ovaries (disorder)." />
				</codes>
			</expression>
		</def>
		<def name="GestationalDiabetesSNOMED">
			<expression xsi:type="ClinicalRequest" cardinality="Multiple"
				dataType="vmr:Problem" codeProperty="conditionCode" 
				dateProperty="diagnosticEventTime.low" useValueSets="true">
				<description>Patient has diagnosis code for gestational diabetes.</description>
				<codes xsi:type="ValueSet" id="1.3.6.1.4.1.19376.1.7.3.1.1.13.8.137" authority="NCHS"
						version="1.0" />
			</expression>
		</def>
		<def name="SteroidInducedDiabetesSNOMED">
			<expression xsi:type="ClinicalRequest" cardinality="Multiple"
				dataType="vmr:Problem" codeProperty="conditionCode" dateProperty="diagnosticEventTime.low">
				<description> Patient has diagnosis code for steroid induced diabetes. 
				</description>
				<codes xsi:type="List">
					<element xsi:type="CodeLiteral" code="190447002"
						codeSystem="2.16.840.1.113883.6.96" codeSystemName="SNOMED-CT"
						displayName="Steroid-induced diabetes (disorder)." />
					<element xsi:type="CodeLiteral" code="190416008"
						codeSystem="2.16.840.1.113883.6.96" codeSystemName="SNOMED-CT"
						displayName="Steroid-induced diabetes mellitus without complication (disorder)." />
				</codes>
			</expression>
		</def>
		<def name="HgA1CResult">
			<expression xsi:type="ClinicalRequest" cardinality="Multiple"
				dataType="vmr:ObservationResult" isInitial="true" useValueSets="true"
				dateProperty="observationEventTime.begin" codeProperty="observationFocus" triggerType="DataElementAdded">		
				<description>HgA1C results have been observed. </description>
				<codes xsi:type="ValueSet" id="2.16.840.1.113883.3.464.1003.198.12.1013" 
					version="1.0" />
			</expression>
		</def>
	</externalData>
	<expressions>
		<def name="PatientAge">
			<expression xsi:type="Property" path="age">
				<source xsi:type="ExpressionRef" name="Patient" />
			</expression>
		</def>
	</expressions>
	<triggers>
		<trigger>
			<eventType>DataEvent</eventType>
			<expression xsi:type="ExpressionRef" name="HgA1CResult" />
		</trigger>
	</triggers>
	<conditions>
		<condition>
			<logic xsi:type="And">
				<description> Patient has a diagnosis of diabetes either during this encounter or a prior encounter, and their HgA1C is above target."
				</description>
				<operand xsi:type="IsNotEmpty">
					<description>Diabetes diagnosis code entered during this or any prior encounter</description>
					<operand xsi:type="ExpressionRef" name="DiabetesDiagnosisSNOMED" />
				</operand>
				<operand xsi:type="Or">
					<operand xsi:type="And">
						<operand xsi:type="LessOrEqual">
							<description>Patient age less than or equal to 5</description>
							<operand xsi:type="ExpressionRef" name="PatientAge"/>
							<operand xsi:type="IntegerLiteral" value="5" />
						</operand>
						<operand xsi:type="GreaterOrEqual">
							<description>HgA1C result greater than or equal to 7.5%.</description>
							<operand xsi:type="ExpressionRef" name="HgA1CResult"/>
							<operand xsi:type="RealLiteral" value="7.5" />
						</operand>
					</operand>
					<operand xsi:type="And">
						<operand xsi:type="In">
							<description>Patient age is between 6 and 12, inclusive.</description>
							<operand xsi:type="ExpressionRef" name="PatientAge"/>
							<operand xsi:type="IntegerIntervalLiteral" 
									low="6" high="12"
									lowClosed="true" highClosed="true"/>
						</operand>
						<operand xsi:type="GreaterOrEqual">
							<description>HgA1C result greater than or equal to 8%.</description>
							<operand xsi:type="ExpressionRef" name="HgA1CResult"/>
							<operand xsi:type="IntegerLiteral" value="8" />
						</operand>
					</operand>
					<operand xsi:type="And">
						<operand xsi:type="In">
							<description>Patient age is between 13 and 19, inclusive.</description>
							<operand xsi:type="ExpressionRef" name="PatientAge"/>
							<operand xsi:type="IntegerIntervalLiteral" 
									low="13" high="19"
									lowClosed="true" highClosed="true"/>
						</operand>
						<operand xsi:type="GreaterOrEqual">
							<description>HgA1C result greater than or equal to 7.5%.</description>
							<operand xsi:type="ExpressionRef" name="HgA1CResult"/>
							<operand xsi:type="RealLiteral" value="7.5" />
						</operand>
					</operand>
					<operand xsi:type="And">
						<operand xsi:type="GreaterOrEqual">
							<description>Patient age greater than or equal to 20.</description>
							<operand xsi:type="ExpressionRef" name="PatientAge"/>
							<operand xsi:type="IntegerLiteral" value="20" />
						</operand>
						<operand xsi:type="GreaterOrEqual">
							<description>HgA1C result greater than or equal to 8%.</description>
							<operand xsi:type="ExpressionRef" name="HgA1CResult"/>
							<operand xsi:type="IntegerLiteral" value="8" />
						</operand>
					</operand>
				</operand>
				<operand xsi:type="IsEmpty">
					<description>Exclusion - Patient has polycystic ovaries</description>
					<operand xsi:type="ExpressionRef" name="PolycysticOvariesSNOMED" />
				</operand>
				<operand xsi:type="IsEmpty">
					<description>Exclusion - Patient has gestational diabetes</description>
					<operand xsi:type="ExpressionRef" name="GestationalDiabetesSNOMED" />
				</operand>
				<operand xsi:type="IsEmpty">
					<description>Exclusion - Patient has steroid induced diabetes</description>
					<operand xsi:type="ExpressionRef" name="SteroidInducedDiabetesSNOMED" />
				</operand>					
			</logic>	
			<conditionRole value="ApplicableScenario"/>	
		</condition>
	</conditions>
	<actionGroup>
		<behaviors>
			<behavior xsi:type="RequiredBehavior" value="Must"/>
		</behaviors>
		<title value="Notify the physician" />
		<description	value="Contact the physician to inform them HgA1C is above target." />

		<subElements>
			<simpleAction xsi:type="CreateAction">
				<actionSentence xsi:type="ObjectExpression"
					objectType="vmr:CommunicationProposal">
					<property name="message">
						<value xsi:type="ComplexLiteral">
							<value xsi:type="dt:ED"
								value="This patient has an HgA1C lab result that is above target. Patient has been diagnosed with Diabetes during or prior to this encounter." />
						</value>
					</property>
				</actionSentence>
			</simpleAction>
		</subElements>
	</actionGroup>
