	<externalData>
		<def name="Patient">
			<expression xsi:type="ClinicalRequest" cardinality="Single"
				dataType="vmr:EvaluatedPerson" isInitial="true">
				<description>Patient who has been evaluated.</description>
			</expression>
		</def>
		<def name="HypertensionDiagnosisSNOMED">
			<expression xsi:type="ClinicalRequest" cardinality="Multiple"
				dataType="vmr:Problem" codeProperty="conditionCode" dateProperty="diagnosticEventTime.low">
				<description>Hypertension diagnosis code entered during this or any prior encounter. </description>
				<codes xsi:type="ValueSet" id="2.16.840.1.113883.3.464.1003.104.12.1011" authority="NIH VSAC"
						version="1.0" />
			</expression>
		</def>
		<def name="BloodPressureMeasurements">
			<expression xsi:type="ClinicalRequest" cardinality="Multiple"
				dataType="vmr:ObservationResult" codeProperty="observationFocus"
				dateProperty="observationEventTime">
				<description>Patient's blood pressure measurements over the past year.</description>
				<codes xsi:type="List">
					<element xsi:type="CodeLiteral" code="75367002" codeSystem="2.16.840.1.113883.6.96" codeSystemName="SNOMEDCT" displayName="Blood pressure (observable entity)"/>
				</codes>
				<dateRange xsi:type="Interval">
					<begin xsi:type="DateAdd">
						<date xsi:type="Today" />
						<granularity xsi:type="Literal" valueType="DateGranularity"
							value="Month" />
						<numberOfPeriods xsi:type="IntegerLiteral" value="-12" />
					</begin>
					<end xsi:type="Today" />
				</dateRange>
			</expression>
		</def>
	</externalData>
	<expressions>
		<def name="MostRecentBloodPressureMeasurement">
			<expression xsi:type="Property" path="observationValue.value">
				<source xsi:type="Last" orderBy="observationEventTime">
					<source xsi:type="ExpressionRef" name="BloodPressureMeasurements"/>
				</source>
			</expression>
		</def>		
		<def name="AverageBloodPressureMeasurement">
			<expression xsi:type="Property" path="observationValue.value">
				<source xsi:type="Avg">
					<source xsi:type="ExpressionRef" name="BloodPressureMeasurements"/>
				</source>
			</expression>
		</def>	
		<def name="TotalBloodPressureMeasurement">
			<source xsi:type="Count">
				<source xsi:type="ExpressionRef" name="BloodPressureMeasurements"/>
			</source>
		</def>	
		<def name="BloodPressureQuotient">
			<expression xsi:type="Property" path="observationValue.value">
				<source xsi:type="Divide">
					<operand xsi:type="ExpressionRef" name="MostRecentBloodPressureMeasurement"/>						
					<operand xsi:type="ExpressionRef" name="AverageBloodPressureMeasurement"/>
				</source>
			</expression>
		</def>
	</expressions>
	<conditions>
		<condition>
			<logic xsi:type="And">
				<description> Patient has a diagnosis of hypertension either during this encounter or a prior encounter, and has 10% increase in blood pressure compared to previous measurement."
				</description>
				<operand xsi:type="IsNotEmpty">
					<description>Hypertension diagnosis code entered during this or any prior encounter</description>
					<operand xsi:type="ExpressionRef" name="HypertensionDiagnosisSNOMED" />
				</operand>
				<operand xsi:type="GreaterOrEqual">
					<description>Patient has had 4 or more blood pressure measurements in the past year.</description>
					<operand xsi:type="ExpressionRef" name="TotalBloodPressureMeasurement"/>
					<operand xsi:type="RealLiteral" value="4"/>
				</operand>
				<operand xsi:type="GreaterOrEqual">
					<description>Most recent blood pressure measurement is 10% increased from the average.</description>
					<operand xsi:type="ExpressionRef" name="BloodPressureQuotient"/>
					<operand xsi:type="RealLiteral" value="1.1"/>
				</operand>			
			</logic>	
			<conditionRole value="ApplicableScenario"/>	
		</condition>
	</conditions>
	<actionGroup>
		<behaviors>
			<behavior xsi:type="RequiredBehavior" value="Must"/>
		</behaviors>
		<title value="Alert the physician" />
		<description	value="Alert the physician the patient has a diagnosis of hypertension and their most recent blood pressure is 10% increased from their average over the last year." />
		<subElements>
			<simpleAction xsi:type="CreateAction">
				<actionSentence xsi:type="ObjectExpression"
					objectType="vmr:CommunicationProposal">
					<property name="message">
						<value xsi:type="ComplexLiteral">
							<value xsi:type="dt:ED"
								value="Increase of 10% in most recent blood pressure measurement for patient with hypertension diagnosis." />
						</value>
					</property>
				</actionSentence>
			</simpleAction>
		</subElements>
	</actionGroup>
