<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane fx:id="pane" styleClass="defaultBackgroundColor" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gov.va.isaac.gui.enhancedsearchview.EnhancedSearchViewController">
  <stylesheets>
    <URL value="@EnhancedSearchView.css" />
  </stylesheets>
   <center>
      <StackPane>
         <children>
            <ProgressIndicator fx:id="searchProgress" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="100.0" prefWidth="100.0" />
            <TableView fx:id="searchResultsTable" BorderPane.alignment="CENTER" />
         </children>
      </StackPane>
   </center>
   <top>
      <FlowPane BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Search Param" textAlignment="CENTER" wrapText="true" HBox.hgrow="NEVER">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Label>
              <TextField fx:id="searchText" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </HBox.margin>
              </TextField>
               </children>
            </HBox>
        <Button fx:id="searchButton" mnemonicParsing="false" text="Search" textAlignment="CENTER" />
         </children>
      </FlowPane>
   </top>
   <bottom>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints fillWidth="false" halignment="LEFT" hgrow="SOMETIMES" percentWidth="50.0" />
          <ColumnConstraints fillWidth="false" halignment="RIGHT" hgrow="SOMETIMES" percentWidth="50.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="totalResultsDisplayedLabel" GridPane.halignment="LEFT">
               <GridPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </GridPane.margin>
            </Label>
            <Label fx:id="totalResultsSelectedLabel" wrapText="true" GridPane.columnIndex="1">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <GridPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </GridPane.margin>
            </Label>
            <FlowPane alignment="BOTTOM_RIGHT" rowValignment="BOTTOM" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
               <children>
                  <HBox fx:id="maxResultsHBox" alignment="BOTTOM_RIGHT">
                     <children>
                        <Label fx:id="maxResultsCustomTextFieldLabel">
                           <HBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                     <FlowPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </FlowPane.margin>
                  </HBox>
                  <ComboBox fx:id="aggregationTypeComboBox" promptText="Display Type">
                     <FlowPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </FlowPane.margin>
                  </ComboBox>
                  <Button fx:id="resetDefaultsButton" mnemonicParsing="false" text="Reset Defaults">
                     <FlowPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </FlowPane.margin>
                  </Button>
               </children>
               <GridPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </GridPane.margin>
            </FlowPane>
            <FlowPane alignment="BOTTOM_LEFT" nodeOrientation="LEFT_TO_RIGHT" rowValignment="BOTTOM" GridPane.halignment="LEFT" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
               <children>
                  <Label text="Export">
                     <FlowPane.margin>
                        <Insets bottom="10.0" left="5.0" right="5.0" top="5.0" />
                     </FlowPane.margin>
                  </Label>
                  <Button fx:id="exportSearchResultsAsTabDelimitedValuesButton" mnemonicParsing="false" text="File">
                     <FlowPane.margin>
                        <Insets bottom="5.0" />
                     </FlowPane.margin>
                  </Button>
                  <Button fx:id="exportSearchResultsToListBatchViewButton" mnemonicParsing="false" text="List">
                     <FlowPane.margin>
                        <Insets bottom="5.0" />
                     </FlowPane.margin>
                  </Button>
                  <Button fx:id="exportSearchResultsToWorkflowButton" mnemonicParsing="false" text="Workflow">
                     <FlowPane.margin>
                        <Insets bottom="5.0" />
                     </FlowPane.margin>
                  </Button>
               </children>
               <GridPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </GridPane.margin>
            </FlowPane>
         </children>
      </GridPane>
   </bottom>
</BorderPane>
