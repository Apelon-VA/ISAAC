<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="columnDefinitionPane" prefHeight="382.0" prefWidth="580.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gov.va.isaac.gui.refexViews.refexCreation.wizardPages.ColumnController">
	<top>
		<Label fx:id="columnTitle" text="Column Definition #" BorderPane.alignment="CENTER">
			<font>
				<Font name="System Bold" size="24.0" />
			</font>
			<BorderPane.margin>
				<Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
			</BorderPane.margin>
		</Label>
	</top>
	<center>
		<GridPane fx:id="gridPane" hgap="10.0" vgap="10.0" BorderPane.alignment="CENTER">
			<columnConstraints>
				<ColumnConstraints fillWidth="false" halignment="RIGHT" hgrow="NEVER" maxWidth="175.0" minWidth="175.0" prefWidth="175.0" />
				<ColumnConstraints hgrow="ALWAYS" />
				<ColumnConstraints fillWidth="false" hgrow="NEVER" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints vgrow="NEVER" />
				<RowConstraints vgrow="NEVER" />
				<RowConstraints vgrow="NEVER" />
				<RowConstraints vgrow="NEVER" />
				<RowConstraints vgrow="NEVER" />
			</rowConstraints>
			<children>
				<Label text="Column Name" />
				<Label text="Column Description" GridPane.rowIndex="1" />
				<Label text="Type" GridPane.rowIndex="2" />
				<Label text="Default Value" GridPane.rowIndex="3" />
				<Button fx:id="newColNameButton" alignment="CENTER_RIGHT" mnemonicParsing="false" text="Create Column" GridPane.columnIndex="2" GridPane.halignment="RIGHT" />
				<TextArea fx:id="columnDescription" minHeight="75.0" prefHeight="75.0" wrapText="true" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" />
				<ChoiceBox fx:id="typeOption" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2" />
				<TextField fx:id="defaultValue" prefHeight="25.0" prefWidth="338.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3" />
				<CheckBox fx:id="isMandatory" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />
				<HBox fx:id="columnNameHolder" GridPane.columnIndex="1" />
				<Label text="Is Column Manditory" GridPane.rowIndex="4" />
			</children>
		</GridPane>
	</center>
	<bottom>
		<GridPane BorderPane.alignment="CENTER">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints fillWidth="false" hgrow="NEVER" minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Button fx:id="nextButton" mnemonicParsing="false" text="Next" GridPane.columnIndex="2">
					<GridPane.margin>
						<Insets bottom="5.0" left="15.0" right="5.0" top="5.0" />
					</GridPane.margin>
				</Button>
				<Button fx:id="backButton" mnemonicParsing="false" text="Back" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
				<Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel" GridPane.halignment="RIGHT">
					<GridPane.margin>
						<Insets bottom="5.0" left="5.0" right="15.0" top="5.0" />
					</GridPane.margin>
				</Button>
			</children>
			<padding>
				<Insets bottom="5.0" top="5.0" />
			</padding>
		</GridPane>
	</bottom>
	<padding>
		<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
	</padding>
</BorderPane>
